<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="ಠ_ಠ"
        android:textSize="60sp"
        android:gravity="bottom|right"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="💢"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnBorrarU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="💨"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btnPorce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="%"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btnDividir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="➗"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="7"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="8"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="9"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnMult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="❌"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="4"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="5"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="6"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btnMen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="➖"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="1"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="2"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="3"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btnMas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="➕"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="+/-"
            android:textSize="38sp"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="0"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="."
            android:textSize="40sp" />
        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="DarCLick"
            android:text="="
            android:textSize="40sp" />
    </LinearLayout>
</LinearLayout>
